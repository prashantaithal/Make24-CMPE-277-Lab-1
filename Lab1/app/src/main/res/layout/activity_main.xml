<?xml version="1.0" encoding="utf-8"?>

<!-- Use DrawerLayout as root container for activity -->
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.example.shruthinarayan.lab1.MainActivity">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:menu="@menu/action"/>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginVertical="10dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Time"
                        android:textColor="@android:color/black"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/time_num"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginVertical="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/textview_border"
                        android:gravity="center"
                        android:text=""
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/attempt"
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_marginVertical="10dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Attempt"
                        android:textColor="@android:color/black"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/attempt_num"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginVertical="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/textview_border"
                        android:gravity="center"
                        android:text=""
                        android:textSize="15sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/succeed"
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginVertical="10dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Succeeded"
                        android:textColor="@android:color/black"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/succeed_num"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginVertical="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/textview_border"
                        android:gravity="center"
                        android:text=""
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/skipped"
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_marginVertical="10dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Skipped"
                        android:textColor="@android:color/black"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/skipped_num"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginVertical="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/textview_border"
                        android:gravity="center"
                        android:text=""
                        android:textSize="15sp" />
                </TableRow>

            </TableLayout>

            <EditText
                android:id="@+id/result_text"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_gravity="start"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:layout_weight="1"
                android:background="@drawable/textview_border"
                android:padding="20dp"
                android:singleLine="true"
                android:textAlignment="textStart"
                android:textSize="28sp" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/num_one"
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/num_two"
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/num_three"
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/num_four"
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:textSize="15sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/add"
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:text="@string/bt_5"
                        android:background="@drawable/textview_border"
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/subtract"
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:text="@string/bt_6"
                        android:background="@drawable/textview_border"
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/multiply"
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:text="@string/bt_7"
                        android:background="@drawable/textview_border"
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/divide"
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:text="@string/bt_8"
                        android:background="@drawable/textview_border"
                        android:textSize="15sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/left_parenthesis"
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:text="@string/bt_9"
                        android:background="@drawable/textview_border"
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/right_parenthesis"
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:text="@string/bt_10"
                        android:background="@drawable/textview_border"
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/delete"
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:text="@string/bt_11"
                        android:background="@drawable/textview_border"
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/equal"
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:enabled="false"
                        android:text="@string/bt_12"
                        android:background="@drawable/textview_border"
                        android:textSize="15sp" />
                </TableRow>
            </TableLayout>

        </LinearLayout>

    <!-- Container for contents of drawer - use NavigationView to make configuration easier -->
    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:menu="@menu/drawer_view"
        app:headerLayout="@layout/nav_header"/>

</android.support.v4.widget.DrawerLayout>